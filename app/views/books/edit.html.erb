<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <h3><%= @book.errors.count %> error</h3>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
        <% end %>

        <%= form_with model:@book, local: true do |book| %>
        <div class="form-group">
          <label for="book_title">Title</label></br>
          <%= book.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label></br>
          <%= book.text_area :body %>
        </div>
        <div class="form-group">
          <%= book.submit "Update Book", class: "btn btn-success" %>
        </div>
        <% end %>
        <%= link_to "Show", book_path(@book) %>
         |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>