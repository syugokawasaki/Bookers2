<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User Info</h2>

        <% if @user.errors.any? %>
          <h3><%= @user.errors.count %> error</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model:@user, local:true do |user| %>
        <div class="form-group">
          <label for="user-name">Name</label></br>
          <%= user.text_field :name %>
        </div>
        <div class="form-group">
        <label class="user_image">Image</labels></br>
          <%= user.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <label for="user-introduction">Introduction</label></br>
          <%= user.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= user.submit 'Update User', class: 'btn btn-secondary' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>